 <html xmlns="http://www.w3.org/1999/xhtml" lang="en">

 <head>
+  <!-- ✨ Mobile + Wix-banner fix inserted -->
+  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
+
+  <style id="mobile-fix">
+    @media (max-width: 960px){
+      #SITE_CONTAINER, #site-root, #masterPage, #PAGES_CONTAINER,
+      #SITE_HEADER, #SITE_FOOTER {
+        width: 100% !important;
+        max-width: 100% !important;
+        min-width: 0 !important;
+      }
+      [style*="min-width"] { min-width: 0 !important; }
+      [style*="width: 980px"], [style*="width:980px"],
+      [style*="width: 1024px"], [style*="width:1024px"],
+      [style*="width: 1200px"], [style*="width:1200px"] {
+        width: 100% !important;
+        max-width: 100% !important;
+      }
+      .siteAspectsContainer, .page-without-grid,
+      .mesh-layout, [data-mesh-id] {
+        max-width: 100% !important;
+        width: 100% !important;
+      }
+      img, video, iframe, canvas {
+        max-width: 100% !important;
+        height: auto !important;
+      }
+      body { overflow-x: hidden; }
+    }
+    :root { --wix-ads-height: 0px !important; }
+    #site-root { top: 0 !important; }
+  </style>
+
+  <script>
+    (function enforceMobile(){
+      const body = document.body;
+      const html = document.documentElement;
+
+      function setMobileClasses(){
+        body.classList.add('responsive', 'device-mobile-optimized');
+        html.classList.add('mobile-viewport');
+      }
+
+      function fluidInlineWidths(){
+        if (window.innerWidth <= 960) {
+          document.querySelectorAll('[style]').forEach(el => {
+            const s = el.getAttribute('style');
+            if (!s) return;
+            const m = s.match(/width\s*:\s*(\d{3,4})px/);
+            if (m && Number(m[1]) >= 980) {
+              el.style.width = '100%';
+              el.style.maxWidth = '100%';
+            }
+            if (/min-width\s*:\s*\d+px/i.test(s)) {
+              el.style.minWidth = '0';
+            }
+          });
+        }
+      }
+
+      function killWixBannerSpace(){
+        ['WIX_ADS', 'WIX_ADS_CONTAINER'].forEach(id => {
+          const el = document.getElementById(id);
+          if (el) { el.style.display = 'none'; el.style.height = '0px'; }
+        });
+        document.documentElement.style.setProperty('--wix-ads-height','0px');
+        const sr = document.getElementById('site-root');
+        if (sr) sr.style.top = '0px';
+      }
+
+      setMobileClasses();
+      killWixBannerSpace();
+      fluidInlineWidths();
+
+      window.addEventListener('resize', fluidInlineWidths);
+      setTimeout(() => { setMobileClasses(); killWixBannerSpace(); fluidInlineWidths(); }, 800);
+      document.addEventListener('visibilitychange', () => {
+        if (!document.hidden) setTimeout(fluidInlineWidths, 200);
+      });
+    })();
+  </script>
+  <!-- ✨ End mobile fix -->
