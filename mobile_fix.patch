 <html xmlns="http://www.w3.org/1999/xhtml" lang="en">

 <head>
+  <!-- ✨ BEGIN: Wix banner removal + mobile responsiveness (non-destructive) -->
+  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
+
+  <!-- Hide/remove Wix banner & reserved space -->
+  <style id="wix-banner-off">
+    :root { --wix-ads-height: 0px !important; }
+    #site-root { top: 0 !important; }
+    #WIX_ADS,
+    #WIX_ADS_CONTAINER,
+    [id^="WIX_ADS"],
+    [data-testid="wix-ad"],
+    [data-aid="WIX_ADS"],
+    [data-hook="wix-ads"],
+    [class*="wixAds"],
+    [class*="wix-ads"] {
+      display: none !important;
+      visibility: hidden !important;
+      height: 0 !important;
+      min-height: 0 !important;
+    }
+  </style>
+  <script>
+    (function removeWixBanner(){
+      const kill = () => {
+        document.documentElement.style.setProperty('--wix-ads-height', '0px');
+        const sr = document.getElementById('site-root'); if (sr) sr.style.top = '0px';
+        const sel = [
+          '#WIX_ADS','#WIX_ADS_CONTAINER','[id^="WIX_ADS"]',
+          '[data-testid="wix-ad"]','[data-aid="WIX_ADS"]','[data-hook="wix-ads"]',
+          '[class*="wixAds"]','[class*="wix-ads"]'
+        ].join(',');
+        document.querySelectorAll(sel).forEach(n => n.remove());
+      };
+      // Run now + watch for late injections
+      kill();
+      const mo = new MutationObserver(kill);
+      mo.observe(document.documentElement, { childList: true, subtree: true });
+      setTimeout(kill, 800);
+      document.addEventListener('visibilitychange', () => !document.hidden && setTimeout(kill, 200));
+      addEventListener('resize', kill);
+    })();
+  </script>
+
+  <!-- Mobile fluid layout overrides (leave your content intact) -->
+  <style id="mobile-fluid-fix">
+    /* Always keep media fluid */
+    img, video, iframe, canvas { max-width: 100% !important; height: auto !important; }
+
+    @media (max-width: 960px){
+      html, body { max-width: 100% !important; overflow-x: hidden !important; }
+
+      /* Core Wix containers commonly fixed at desktop widths */
+      #SITE_CONTAINER, #site-root, #masterPage,
+      #PAGES_CONTAINER, #SITE_HEADER, #SITE_FOOTER {
+        width: 100% !important;
+        max-width: 100% !important;
+        min-width: 0 !important;
+      }
+
+      /* Remove hard min-width locks */
+      [style*="min-width"] { min-width: 0 !important; }
+
+      /* Normalize common fixed widths from desktop layouts */
+      [style*="width: 980px"], [style*="width:980px"],
+      [style*="width: 1024px"], [style*="width:1024px"],
+      [style*="width: 1200px"], [style*="width:1200px"] {
+        width: 100% !important;
+        max-width: 100% !important;
+      }
+
+      /* Mesh/grid wrappers */
