+        width: 100% !important;
+        max-width: 100% !important;
+      }
+    }
+  </style>
+  <script>
+    // Make inline fixed widths fluid on small screens (non-destructive)
+    (function(){
+      function fluidInline(){
+        if (window.innerWidth > 960) return;
+        // Hint classes some Wix themes expect for mobile
+        document.body.classList.add('responsive','device-mobile-optimized');
+        document.documentElement.classList.add('mobile-viewport');
+
+        document.querySelectorAll('[style]').forEach(el => {
+          const s = el.getAttribute('style') || '';
+          // Replace hard widths >= 980px with 100%
+          const m = s.match(/width\s*:\s*(\d{3,4})px/i);
+          if (m && +m[1] >= 980) {
+            el.style.width = '100%';
+            el.style.maxWidth = '100%';
+          }
+          // Remove min-width locks
+          if (/min-width\s*:\s*\d+px/i.test(s)) {
+            el.style.minWidth = '0';
+          }
+        });
+      }
+      fluidInline();
+      addEventListener('resize', fluidInline);
+      setTimeout(fluidInline, 800);
+      document.addEventListener('visibilitychange', () => !document.hidden && setTimeout(fluidInline, 200));
+    })();
+  </script>
+  <!-- ✨ END: mobile + banner fix -->
